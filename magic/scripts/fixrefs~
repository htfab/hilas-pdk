#! /bin/bash

THIS_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

for d in $(find $PWD -type f -iname "*.mag"); do
    results=$(python3 "${THIS_DIR}/magic_file_checks.py" -f "${d}")
    if [[ -n "${results}" ]]; then
        echo "${d}:"
        echo "${results}"
    fi
done
